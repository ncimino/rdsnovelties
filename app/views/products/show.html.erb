<% title @product.name %>

<%= image_tag @product.image_url.to_s %>
<br />
<% unless @product.description.empty? %>
    <%= link_to "Add to Cart", line_items_path(:product_id => @product), :method => :post %>
    <%= simple_format h(@product.description) %>
<% end %>
<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price %>
</p>

<% unless @product.category.nil? %>
<p>
  <strong>Category:</strong>
  <%= link_to h(@product.category.name), @product.category %>
</p>
<% end %>

<%= link_to "Add to Cart", line_items_path(:product_id => @product), :method => :post %>

<p>
  <% if admin? %>
      <%= link_to "Edit", edit_product_path(@product) %> |
      <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <% end %>
  <%= link_to "Back", :back %>
</p>