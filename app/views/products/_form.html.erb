<%= form_for @product, :html => {:multipart => true} do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :category_id %><br/>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
      <%= link_to "Edit Categories", categories_path %>
    </p>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :price %><br/>
      <%= f.text_field :price %>
    </p>
    <p>
      <%= f.label :image %><br/>
    <table>
      <tr>
        <td>
          <%= f.file_field :image %>
        </td>
        <td>
          <% if @product.image.blank? %>
              No Image currently selected for product.
          <% else %>
              Current image:<br/>
              (The image will not change,<br/>unless you pick a new file)
              <td>
                <%= image_tag @product.image_url(:thumb).to_s %>
              </td>
          <% end %>
          </td>
          </tr>
    </table>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <p><%= f.submit "Submit" %></p>
<% end %>
